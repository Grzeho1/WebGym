<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> - WebGym</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    @*<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/22.2.5/material.css" />*@
    <link href="https://cdn.syncfusion.com/ej2/22.2.5/bootstrap5-dark.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Caladea&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebGym.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/22.2.5/dist/ej2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body class="e-bigger">
    <partial name="_SidePanel" />

    @*Header *@

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom-green box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Panel" asp-action="Index" >WebGym</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                        <li class="nav-item"> </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Exercises" asp-action="Index">Exercises</a>
                        <li class="nav-item"> </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Workouts" asp-action="Index">Workouts</a>
                        <li class="nav-item"> </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ExerciseRecords" asp-action="Index">ExerciseRecords</a>
                        <li class="nav-item"> </li>
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @*Content*@

    <div class="main-content">
    <div class="container mt-7">
            <div class="row justify-content-center">
            <div class="@(ViewData["isPanel"] == null?"col-md-10":"col-md-12")">
            <main role="main" class="pb-5">
                    @if (ViewData["isPanel"] == null)
                    {
                        <div class="row" >

                            <div class="col-md-7">
                                <div class="d-flex flex-column mb-5">
                                    <div class="d-flex mb-1">
                                        <div class="flex-grow-1">
                                            <h3 class="fw-bold"> @ViewData["PageTitle"]</h3>
                                        </div>
                                        <div>
                                            @if (ViewData["PageAction"] != null)
                                            {
                                                <a class="btn btn-success" href="@ViewData["PageUrl"]">
                                                    @ViewData["PageAction"] 
                                                </a>
                                            }

                                        </div>
                                    </div>
                                    <ejs-breadcrumb id="breadcrumb"></ejs-breadcrumb>
                                </div>
                            </div>
                        </div>
                    }
                    @RenderBody()
            </main>
        </div>
        </div>
    </div>
    </div>

    @*Footer *@
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebGym Made by Tomáš Řehák - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @*Script *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
  
</body>
</html>
