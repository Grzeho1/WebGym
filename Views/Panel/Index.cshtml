    @*Main content widget *@

<div class="row mb-8">
    <div class="col-md-4">
        <div class="d-flex flex-row widget TotalWeight">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="bi bi-ev-station-fill"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Weight lifted 7 days</span>
                <h1 class="display-6 fw-bold">@ViewBag.TotalWeight kg</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row widget TotalWeight">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="bi bi-7-square"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Days lifted 7 days</span>
                <h1 class="display-6 fw-bold">@ViewBag.daysLifted</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row widget TotalWeight">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="bi bi-calendar-day-fill"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Weight lifted 7 days</span>
                <h1 class="display-6 fw-bold">@ViewBag.TotalWeight kg</h1>
            </div>
        </div>
    </div>
</div>

